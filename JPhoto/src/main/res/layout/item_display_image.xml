<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    android:padding="0.5dp">

    <com.willpower.jphoto.album.AutoFitImageView
        android:id="@+id/imgDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/gifTag"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_gif"
        android:visibility="gone" />

    <com.willpower.jphoto.album.ImageCheckedButton
        android:id="@+id/mChecked"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_margin="7dp"
        android:background="@drawable/shape_oval_gray_t" />

    <ImageView
        android:id="@+id/videoTag"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_video_tag"
        android:visibility="gone" />
</FrameLayout>